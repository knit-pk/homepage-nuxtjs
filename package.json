    "qs": "^6.5.1",
    "sass-loader": "^6.0.6",
    "vue-prevent-parent-scroll": "^1.0.5",
    "vue2-scrollbar": "0.0.3"
  },
  "devDependencies": {
    "watch": "^1.0.2",
    "jest": "^21.2.1",
    "eslint": "^4.3.0",
